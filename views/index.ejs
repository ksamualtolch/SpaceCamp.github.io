<% include ./partials/header %>
<div class="ui container">

<!--ARCHIVE MENU-->

<div class="ui stackable grid">
  <div class="four wide column">
        <div class="ui inverted vertical menu archive">
            <p>Archive</p>        
            <% blogs.forEach(function(blog){ %>
            <a href="/blogs/<%= blog._id %>" class="item">
                <%=blog.title%>
            </a>
            <% }) %>
        </div>
  </div>

<!--END ARCHIVE MENU-->

<!--MAIN BLOG ENTRY-->

  <div class="twelve wide column">
      <div class="ui divided items">
          <% blogs.forEach(function(blog){ %>
            <div class="twelve wide column centered blogPost">
              <div class="blogPostTitle">
              <h3><a class="header" href="/blogs/<%= blog._id %>"><%= blog.title%></a></h3>
              </div>
              <div class="meta">
                  <span id="date"><%= blog.created.toDateString() %></span>
              </div>
              <div class="item">
                <div class="ui medium image">
                  <img src="<%= blog.image%>">
                </div>
                <div class="content">
                  <!--<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title%></a>-->
                    <div class="description">
                          <p><%- blog.body.substring(0,100) %>....</p>
                    </div>
                  <div class="extras">
                        <a class="ui floated inverted black tiny read button" href="/blogs/<%= blog._id %>">
                          Read More
                          <i class="right chevron icon"></i>
                        </a>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
      </div>
  </div>
</div>

<!--END MAIN BLOG ENTRY-->

<% include ./partials/footer %>

